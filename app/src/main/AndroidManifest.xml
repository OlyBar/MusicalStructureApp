<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.olympiabardis.musicalstructureapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MozartRadio"
            android:label="Mozart Radio" />
        <activity
            android:name=".BeethovenRadio"
            android:label="Beethoven Radio" />
        <activity
            android:name=".ChopinRadio"
            android:label="Chopin Radio" />
        <activity android:name=".Download"
            android:label="Download Song"></activity>
    </application>

</manifest>