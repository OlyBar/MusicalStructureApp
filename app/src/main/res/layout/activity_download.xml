<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_download"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.olympiabardis.musicalstructureapp.Download">

    <TextView
        android:id="@+id/download_instructions"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:text="@string/download_instructions"
        android:textAlignment="center"
        android:textSize="14sp"/>

        <TextView
            android:id="@+id/selected_song"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_below="@+id/station_list_description"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:textStyle="bold"
            android:textColor="#004D40"
            android:textSize="14sp"
            android:text="The Magic Flute by Wolfgang Amadeus Mozart" />

    <TextView
        android:id="@+id/album_name"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/station_list_description"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#004D40"
        android:text="Album: Essential Mozart" />

    <TextView
        android:id="@+id/similar_songs"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center_vertical"
        android:text="SIMILAR SONGS"
        android:textStyle="bold"
        android:textColor="#004D40"
        android:textAlignment="center"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/first_song"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center_vertical"
        android:text="Moonlight Sonata"
        android:textStyle="bold"
        android:textColor="#004D40"
        android:textAlignment="center"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/second_song"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center_vertical"
        android:text="The Marriage of Figaro"
        android:textStyle="bold"
        android:textColor="#004D40"
        android:textAlignment="center"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/third_song"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center_vertical"
        android:text="Don Giovani"
        android:textStyle="bold"
        android:textColor="#004D40"
        android:textAlignment="center"
        android:textSize="14sp"/>

</LinearLayout>
